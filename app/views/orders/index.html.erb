<table>
  <thead>
    <th>ID</th>
    <th>Email</th>
    <th>Created</th>
  </thead>
  <tbody>
    <% @orders.each do |order| -%>
    <tr>
      <td><%= link_to(order.id, order) %></td>
      <td><%= link_to(order.customer.email, order.customer) %></td>
      <td><%= order.created_at %></td>
    </tr>
    <% end %>
  </tbody>
</table>
